{
  "$schema": "https://json.schemastore.org/package",
  "name": "common-presets",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md",
    "eslint": "eslint --ext=cjs,cts,js,mjs,mts,ts,tsx --ignore-path=packages/eslint-config/eslintignore",
    "postinstall": "husky install",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prettier": "prettier --ignore-path=packages/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=packages/remark-preset/remarkignore --ignore-path-resolve-from=cwd"
  },
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/runtime": "7.18.9",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "eslint": "8.21.0",
    "fast-glob": "3.2.11",
    "husky": "8.0.1",
    "lerna": "5.4.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "remark-cli": "11.0.0",
    "stylelint": "14.9.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "^14.17.0 || ^16.13.0 || >=18.0.0"
  }
}
