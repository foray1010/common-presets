{
  "$schema": "https://json.schemastore.org/package",
  "name": "common-presets",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md && lerna run type:check",
    "eslint": "ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.mjs",
    "postinstall": "husky install",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd --silently-ignore"
  },
  "devDependencies": {
    "@babel/core": "7.21.3",
    "@babel/runtime": "7.21.0",
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "eslint": "8.36.0",
    "fast-glob": "3.2.12",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lerna": "6.6.1",
    "lint-staged": "13.2.0",
    "node-notifier": "10.0.1",
    "prettier": "2.8.7",
    "remark-cli": "11.0.0",
    "stylelint": "15.3.0",
    "typescript": "5.0.3"
  },
  "packageManager": "yarn@3.5.0",
  "engines": {
    "node": "^16.14.0 || >=18.12.0"
  }
}
