{
  "$schema": "https://json.schemastore.org/package",
  "name": "common-presets",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md && yarn workspaces run type:check",
    "eslint": "eslint --ext=cjs,cts,js,mjs,mts,ts,tsx --ignore-path=node_modules/@foray1010/eslint-config/eslintignore",
    "postinstall": "husky install",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd --silently-ignore"
  },
  "devDependencies": {
    "@babel/core": "7.20.7",
    "@babel/runtime": "7.20.7",
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "eslint": "8.31.0",
    "fast-glob": "3.2.12",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lerna": "6.3.0",
    "lint-staged": "13.1.0",
    "node-notifier": "10.0.1",
    "prettier": "2.8.1",
    "remark-cli": "11.0.0",
    "stylelint": "14.16.1",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": "^14.18.0 || ^16.13.0 || >=18.12.0"
  }
}
