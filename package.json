{
  "name": "common-presets",
  "private": true,
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md",
    "eslint": "eslint --ext=js,mjs,ts,tsx --ignore-path=packages/eslint-config/eslintignore --resolve-plugins-relative-to=packages/eslint-config",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark '*.md' 'packages/*/*.md'",
    "prettier": "prettier --ignore-path=packages/prettier-config/prettierignore"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "eslint": "6.5.1",
    "husky": "3.0.8",
    "lerna": "3.17.0",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "remark-cli": "7.0.0"
  }
}
