{
  "name": "common-presets",
  "private": true,
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx --ignore-path=packages/eslint-config/eslintignore --resolve-plugins-relative-to=packages/eslint-config",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prettier": "prettier --ignore-path=packages/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=packages/remark-preset/remarkignore --ignore-path-resolve-from=cwd"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "eslint": "6.8.0",
    "husky": "4.2.3",
    "lerna": "3.20.2",
    "lint-staged": "10.1.3",
    "prettier": "2.0.4",
    "remark-cli": "8.0.0",
    "sort-package-json": "1.41.0"
  },
  "engines": {
    "node": ">=10.13"
  }
}
