{
  "name": "common-presets",
  "private": true,
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx --ignore-path=packages/eslint-config/eslintignore --resolve-plugins-relative-to=packages/eslint-config",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prettier": "prettier --ignore-path=packages/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=.gitignore"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "eslint": "6.6.0",
    "husky": "3.0.9",
    "lerna": "3.18.3",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "remark-cli": "7.0.0",
    "sort-package-json": "1.23.1"
  },
  "engines": {
    "node": ">=8.9"
  }
}
