{
  "$schema": "https://json.schemastore.org/package",
  "name": "common-presets",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md",
    "eslint": "eslint --ext=cjs,cts,js,mjs,mts,ts,tsx --ignore-path=packages/eslint-config/eslintignore",
    "postinstall": "husky install",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prettier": "prettier --ignore-path=packages/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=packages/remark-preset/remarkignore --ignore-path-resolve-from=cwd"
  },
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/runtime": "7.17.2",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "eslint": "8.10.0",
    "husky": "7.0.2",
    "lerna": "4.0.0",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "remark-cli": "10.0.1",
    "stylelint": "14.5.3",
    "typescript": "4.6.2"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.13.0"
  }
}
