{
  "$schema": "https://json.schemastore.org/lerna",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__mocks__/**",
        "**/__tests__/**",
        "**/*.{spec,test}.{cjs,cts,js,mjs,mts,ts,tsx}"
      ]
    },
    "version": {
      "changelogPreset": "conventional-changelog-conventionalcommits",
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
