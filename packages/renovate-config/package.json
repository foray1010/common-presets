{
  "name": "@foray1010/renovate-config",
  "version": "0.2.1",
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":automergeMinor",
        ":assignAndReview(foray1010)"
      ],
      "timezone": "Asia/Hong_Kong",
      "schedule": [
        "after 2am and before 5am"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "after 5am and before 7am on Monday"
        ]
      },
      "kubernetes": {
        "fileMatch": [
          "-deployment\\.yml$"
        ]
      },
      "packageRules": [
        {
          "packagePatterns": [
            "^@foray1010/.+-config$"
          ],
          "groupName": "@foray1010/common-presets monorepo"
        },
        {
          "packagePatterns": [
            "^import-sort-"
          ],
          "groupName": "import-sort monorepo"
        }
      ],
      "prCreation": "not-pending",
      "stabilityDays": 3
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
