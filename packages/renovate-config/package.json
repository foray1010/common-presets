{
  "name": "@foray1010/renovate-config",
  "version": "0.5.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":semanticCommitTypeAll(chore)",
        ":automergeMinor",
        ":assignAndReview(foray1010)"
      ],
      "timezone": "Asia/Hong_Kong",
      "schedule": [
        "after 2am and before 5am"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "after 5am and before 8am on Monday"
        ],
        "prPriority": 1
      },
      "pin": {
        "prPriority": 2
      },
      "kubernetes": {
        "fileMatch": [
          "-deployment\\.yml$"
        ]
      },
      "packageRules": [
        {
          "packagePatterns": [
            "^@foray1010/.+-(config|preset)$"
          ],
          "groupName": "@foray1010/common-presets monorepo",
          "stabilityDays": 0
        },
        {
          "packagePatterns": [
            "^import-sort-"
          ],
          "groupName": "import-sort monorepo"
        }
      ],
      "prCreation": "not-pending",
      "stabilityDays": 3
    }
  }
}
