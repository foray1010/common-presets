{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES2019", "DOM"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2015",
    "useDefineForClassFields": true
  }
}
